<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zc.spbt2xstu.dao.UserDao" >
    <resultMap id="userResult" type="com.zc.spbt2xstu.entity.User" >
        <id column="id" property="id" jdbcType="VARCHAR" />
        <result column="age" property="age" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
    </resultMap>

    <select id="queryUsers" resultMap="userResult">
        SELECT * FROM user
    </select>

    <select id="queryUserById" resultMap="userResult" parameterType="com.zc.spbt2xstu.entity.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <insert id="addUser" parameterType="com.zc.spbt2xstu.entity.User" >
        INSERT INTO user
        (id,age,name)
        VALUES
        (#{id}, #{age}, #{name})
    </insert>

    <delete id="delUser" parameterType="java.lang.String" >
        DELETE FROM
        user
        WHERE
        id =#{id}
    </delete>

    <update id="updUser" parameterType="com.zc.spbt2xstu.entity.User" >
        UPDATE user
        SET name=#{name},age=#{age}
        WHERE
        id=#{id}
    </update>

</mapper>